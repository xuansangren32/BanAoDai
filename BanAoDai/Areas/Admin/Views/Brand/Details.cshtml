@model MyClass.Model.Brand

@{
    ViewBag.Title = "Chi tiết Thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết Thương hiệu</h2>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                        Chi tiết Thương Hiệu
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    @*<a href="@Url.Action("Edit","Menu")" class="btn btn-sm btn-success"><i class="fas fa-tools"></i> Sửa</a>*@
                    <a href="@Url.Action("Index","Menu")" class="btn btn-sm btn-success">
                        <i class="fas fa fa-arrow-circle-left"></i> Quay lại
                    </a>
                </div>

                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên Thương Hiệu</th>
                                <th>Hình ảnh</th>
                                <th>Slug</th>
                                <th>Số Điện thoại</th>
                                <th>Địa Chỉ</th>
                                <th>Email</th>
                                <th>Mô tả</th>
                                <th>CreatedBy</th>
                                <th>CreatedBy_At</th>
                                <th>UpdatedBy</th>
                                <th>UpdatedAt</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Name)
                                </td>
                                <td>
                                    <img width="100" height="100" src="~/Public/images/@Model.Img" class="img-fluid" />
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Slug)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.MetaDescription)
                                </td>






                                <td>
                                    @Html.DisplayFor(model => model.CreatedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.CreatedBy_At)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.UpdatedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.UpdatedAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Status)
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>



            </div>
        </div>
    </div>
</section>


