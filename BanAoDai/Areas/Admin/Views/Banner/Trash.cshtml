            {
                <a href="@Url.Action("Edit","Banner", new {id=item.Id})" class="btn btn-sm btn-success"><i class="fas fa-toggle-on"></i></a>
            }
            else
            {
                <a href="@Url.Action("Edit","Banner", new {id=item.Id})" class="btn btn-sm btn-danger"><i class="fas fa-toggle-off"></i></a>
            }*@


                            <a href="@Url.Action("Restore","Banner", new { id=item.Id })" class="btn btn-sm btn-info"><i class="fas fa-undo"></i> Phục hồi</a>
                            <a href="@Url.Action("Destroy","Banner", new {id=item.Id})" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                        </td>

                    </tr>
                }
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer text-right">
            <a href="@Url.Action("Index","Banner")" class="btn btn-sm btn-info">
                <i class="fas fa fa-arrow-circle-left"></i> Quay về
            </a>
        </div>
        <!-- /.card-footer-->
    </div>


</section>
