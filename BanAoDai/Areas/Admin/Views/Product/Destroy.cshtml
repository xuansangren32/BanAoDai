@model MyClass.Model.Product

@{
    ViewBag.Title = "Xóa San Pham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>Bạn có chắc chắn muốn xóa cái này không?</h3>

<h4>Sản phẩm</h4>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                        Xóa Sản phẩm
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    @*<a href="@Url.Action("Edit","Menu")" class="btn btn-sm btn-success"><i class="fas fa-tools"></i> Sửa</a>*@
                    <a href="@Url.Action("Index","Menu")" class="btn btn-sm btn-success">
                        <i class="fas fa fa-arrow-circle-left"></i> Quay lại
                    </a>
                </div>

                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên Sản Phẩm</th>

                                <th>Vị Trí</th>


                                <th>CreatedBy</th>
                                <th>CreatedBy_At</th>
                                <th>UpdatedBy</th>
                                <th>UpdatedAt</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Name)
                                </td>


                                <td>
                                    @Html.DisplayFor(model => model.CreatedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.CreatedBy_At)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.UpdatedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.UpdatedAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Status)
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>



            </div>
        </div>

    </div>

</section>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Quay Lại", "Index")
    </div>
}
