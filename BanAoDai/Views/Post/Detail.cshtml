@model MyClass.Model.Post
@{
    ViewBag.Title = "Chi tiết Tin Tức";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Public/tem/styles/main_styles.css">
<script src="~/Public/tem/js/jquery-3.2.1.min.js"></script>

<style>
    .news_section_container {
        margin-top: 120px
    }

    .row-item-new {
        margin-bottom: 20px
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <hr />
                <h2 class="title-news">@ViewBag.Title</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <h2 class="title-news">@Model.MetaDescription</h2>
            </div>
            <div class="col-md-12">

               @Html.Raw(Model.Detail)
            </div>
        </div>
    }


</div>