@model PagedList.PagedList<MyClass.Model.Post>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Tin Tức";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Public/tem/styles/main_styles.css">
<script src="~/Public/tem/js/jquery-3.2.1.min.js"></script>

<style>
    .news_section_container {
        margin-top: 120px
    }
    .pagination a {
        color: blue;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color .3s;
    }
        .pagination a.active {
            background-color: green;
            color: white;
            border-radius: 5px;
        }

        .pagination a:hover:not(.active) {
            background-color: #ddd;
        }
    .row-item-new {
        margin-bottom: 20px
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <hr />
            <h2 class="title-news">Tin tức</h2>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {<div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">

                        <a href="" title="@item.Title"><img src="~/Public/images/@item.Img" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">

                        <a href="/@item.Slug-n@(item.Id)" title="@item.Title">@item.Title</a>
                        <div class="description-box">
                            @item.MetaDescription
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row pagination">
            <div class="col-6"></div>
            <div class="col-6" style="text-align:right">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }));
               
            </div>

        </div>
    }


</div>