@model  IEnumerable<MyClass.Model.Category>

@if (Model != null && Model.Any())
{

    <ul class="sidebar_categories">
        @foreach (var item in Model)
        {
            if (ViewBag.CateId == item.Id)
            {
                <li class="active"><a href="/danh-muc-san-pham/@item.Slug-@(item.Id)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Name</a></li>
            }
            else
            {
                <li><a href="/danh-muc-san-pham/@item.Slug-@(item.Id)">@item.Name</a></li>
            }

        }

        @*<li class="active"><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Women</a></li>
