@model BanAoDai.Models.OrderViewModel
@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}


<link rel="stylesheet" type="text/css" href="~/Public/tem/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Public/tem/styles/categories_responsive.css">

<style>
    .error {
        color: red
    }
</style>


<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang Chủ</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ Hàng</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Thanh Toán</h1>
                    <p>Bạn hãy kiểm tra lại đơn hàng cho chích xác!</p>
                </div>

            </div>
            <hr />
            @if (ViewBag.CheckCart != null)
            {
                <div class="row">
                    <div class="col-md-9 ">
                        <div style="display:none" id="show_success"></div>
                        @Html.Action("Partial_CheckOut", "ShoppingCart")
                    </div>
                    <div class="col-md-3 ">
                        @Html.Action("Partial_Item_ThanhToan", "ShoppingCart")
                    </div>
                </div>
            }
            else
            {
                <div>
                    Bạn chưa có sản phẩm nào.Vui lòng thêm <a href="/san-pham">sản phẩm</a> vào Giỏ hàng!
                </div>
            }


        </div>
    </div>
</div>

@section scripts{
    <script src="~/Public/tem/js/categories_custom.js"></script>
    <script>
        function OnSuc(rs) {
            if (!rs.Success) {
                $('#show_success').html("Mua hàng thất bại! Xin vui lòng thử lại!")
            }
        }
        $(document).ready(function () {
            $('#myFrom').validate({
                rules: {
                    'ReceiveName': {
                        required: true
                    },
                    'ReceivePhone': {
                        required: true
                    },
                    'ReceiveAddress': {
                        required: true
                    },
                    'ReceiveEmail': {
                        required: true,
                        email: true
                    },
                },
                messages: {
                    'ReceiveName': 'Vui lòng nhập thông tin!',
                    'ReceivePhone': 'Bạn không thể để trống trường này!',
                    'ReceiveAddress': 'Bạn vui lòng nhập đỉa chỉ giao hàng!',
                    'ReceiveEmail': 'Email của bạn không hợp lệ!'

                }
            });
        });
    </script>

}
